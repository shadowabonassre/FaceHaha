<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="#FFFAF0"
    android:configChanges="orientation|keyboardHidden"
    tools:context="com.faceahaha.huang.facehaha.MainActivity">


    <ImageView
        android:id="@+id/id_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:gravity="center"
        android:id="@+id/layoutone"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:layout_below="@+id/id_waitting"
        android:layout_alignRight="@+id/layouttwo"
        android:layout_alignEnd="@+id/layouttwo">

        <android.support.design.widget.FloatingActionButton
            app:backgroundTint="#20B2AA"
            android:id="@+id/id_fab_share"
            android:layout_width="wrap_content"
            android:layout_marginStart="16px"
            android:layout_marginLeft="16px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_share_variant" />

        <android.support.design.widget.FloatingActionButton
            app:backgroundTint="#20B2AA"
            android:id="@+id/id_fab_save"
            android:layout_width="wrap_content"
            android:layout_marginStart="16px"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="16px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_floppy" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layouttwo"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/id_fab_camera"
            android:layout_width="wrap_content"
            android:layout_marginStart="16px"
            android:layout_marginLeft="16px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/camera" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/id_fab_pick"
            android:layout_width="wrap_content"
            android:layout_marginStart="16px"
            android:layout_marginLeft="16px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_panorama" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/id_fab_detect"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginStart="16px"
            android:layout_marginLeft="16px"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_magnify" />

        <android.support.design.widget.FloatingActionButton
            app:backgroundTint="#20B2AA"
            android:id="@+id/id_fab_select"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_marginRight="16px"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shuffle" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/id_waitting"
        android:clickable="true"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>


    </FrameLayout>


</RelativeLayout>
